@{
  Layout = "_Layout";
}

@section scripts {

}

<header>
  <div class="headerLogo">
    <img src="../img/logo.png" alt="Logo">
  </div>

</header>

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
    </div>

    <ul class="nav navbar-nav">
      <li class="active"><a href="/">Home</a></li>

      <form class="navbar-form navbar-left" action="/experiences/tag/search" method="post">
      <div class="form-group">

        <input type="text" class="form-control" name="tag-name" placeholder="Search By KeyWord">

      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>

      <form class="navbar-form navbar-left" action="/experiences/city/search" method="post">
      <div class="form-group">
        <input type="text" class="form-control" name="city-name" placeholder="Search By City">
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
    </ul>

    <ul class="nav navbar-nav navbar-right">
      <li><a href="/signup"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
      <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
    </ul>
  </div>
</nav>



<body>
  <h1>Experiences</h1>
<hr>
  <h2>@Model.GetTitle()</h2>
  <h2>@Model.GetCityName()</h2>
  <h2>Hosted By: @Model.GetHostName()</h2>
  <img src='@Model.GetPhotoLink()' height = "300px" alt="">
  <h2>@Model.GetDescription()</h2>
  <h2>Price: $ @Model.GetPrice()</h2>

  <form class="" action="/login" method="get">
    <button type="submit" class="btn" name="button">Book</button>
  </form> <br>
  @* To build the link to go back- use modal class. *@

</body>
