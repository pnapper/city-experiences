@section scripts {

}
  <body>
    <div class="jumbotron">
      <h1>City Experiences</h1>
    </div>
    <div class="signupForm">
      <div id="formOne">
        <form class="form-group" action="/user/home/signup" method="post">
          <label for="name">What is your name?</label>
          <input type="text" class="form-control" style="width:30%" name="name">
          <br>
          <label for="dob">What is your birthday? (MM/DD/YYYY)</label>
          <input type="date" class="form-control" style="width:30%" name="dob">
          <br>
          <label for="country">What country are you from?</label>
          <input type="text" class="form-control" style="width:30%" name="country">
          <br>
          <label for="password">What is your desired password?</label>
          <input type="text" class="form-control" style="width:30%" name="password">
          <br>
          <label for="email">What is your email address?</label>
          <input type="text" class="form-control" style="width:30%" name="email">
          <br>
          <label for="phone">What is your phone number?</label>
          <input type="text" class="form-control" style="width:30%" name="phone" value="(xxx)xxx-xxxx"><br>
          <button type="submit" class="btn btn-info" name="button">Sign up!</button>
        </form>
        <form class="form-group" class="btn btn-info" action="/Login" method="post">
          <button type="submit" class="btn btn-info" name="button">Go back to login</button>
        </form>
      </div>
    </div>
  </body>
</html>
