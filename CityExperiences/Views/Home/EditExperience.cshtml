  Layout = "_Layout";
}

@section scripts {

}

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">City Experiences</a>
    </div>

    <ul class="nav navbar-nav">
      <li class="active"><a href="/user/@Model["user"].GetId()/home">Home</a></li>

      <form class="navbar-form navbar-left" action="/experiences/tag/search" method="post">
      <div class="form-group">
        <input type="text" class="form-control" action="/experiences/tag/search" method="post" placeholder="Search By Keyword">
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>

      <form class="navbar-form navbar-left" action="/experiences/city/search" method="post">
      <div class="form-group">
        <input type="text" class="form-control" name="city-name" placeholder="Search By City">
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
